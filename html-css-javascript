				function rightStop() {
					for (var i = 0; i < piece.length; i++) {
						if (parseInt(piece[i].style.left) == 270) return true;
					}

					return false;
				}

				function downStop() {
					for (var i = 0; i < piece.length; i++) {
						if (parseInt(piece[i].style.top) == 570) return true;
					}

					return false;
				}

				function leftStop() {
					for (var i = 0; i < piece.length; i++) {
						if (parseInt(piece[i].style.left) == 0) return true;
					}

					return false;
				}
